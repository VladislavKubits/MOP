<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#13f1cc">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="НОВОСТИ"
        android:id="@+id/button"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="goToActivity_NEWS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="РАСПИСАНИЕ"
        android:id="@+id/button3"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:onClick="goToActivity_Timetable" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="О КАФЕДРЕ"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:onClick="goToActivity_History" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ОТПРАВИТЬ НОВОСТЬ В СОЦСЕТИ"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:onClick="goToActivity_Publication" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="АБИТУРИЕНТ"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:onClick="goToActivity_Abiturient" />
</RelativeLayout>